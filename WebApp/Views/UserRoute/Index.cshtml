@model Shared.Resources.Book.BookGetData
@{ Layout = "~/Views/Shared/_GuestLayout.cshtml";}
<link href="~/views/css/myBtn.css" rel="stylesheet" />
<!-- Page Header -->
<header class="masthead" style="background-image:url('/img/home-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="site-heading">
                    <h1>Cardigan</h1>
                    <span class="subheading">They assume you know nothing</span>
                </div>
            </div>
        </div>
    </div>
</header>
<!-- Main Content -->
<div class="container">
    <form id="form">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto" id="Books">
                <div class="Book-preview">
                    <a href="Book.html">
                        <h2 class="Book-title" id="title">
                        </h2>
                        <h3 class="Book-subtitle" id="content">
                        </h3>
                    </a>
                </div>
                <hr>
            </div>
        </div>
    </form>
    <hr>
    <div class="clearfix">
        <input type="hidden" value="0" id="oldvalue">
        <a id="oldBook" data-value="0" class="btn btn-primary float-right">Older Book &rarr;</a>
    </div>
</div>
<hr>
<button  id="myBtn" class="btn btn-primary float-right">Top&rarr;</button>
<script src="~/lib/general/jquery/dist/jquery.js" type="text/javascript"></script>
<script src="~/views/js/Booklist.js"></script>
